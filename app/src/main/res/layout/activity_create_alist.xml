<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nick.letsgetdrunk12.CreateAList">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="23sp"
        android:text="Create a list for your game"
          />

    <EditText
        android:id="@+id/editTitle"
        android:hint="Write your title here..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/editList"
        android:hint="Write your lines here..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="111dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="215dp"
        android:text="Add to list" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addBtn"
        android:layout_marginEnd="23dp"
        android:text="Submit" />

    <ListView
        android:id="@+id/lstTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/submitBtn">
    </ListView>


</RelativeLayout>
